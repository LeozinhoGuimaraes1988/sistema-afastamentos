{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": [
    {
      "target": "production",
      "public": "frontend/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "destination": "https://gestaoafastamentos-api.onrender.com/:**"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "predeploy": ["cd frontend && npm run build"]
    },
    {
      "target": "staging",
      "public": "frontend/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "destination": "https://gestaoafastamentos-api.onrender.com/:**"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "predeploy": ["cd frontend && npm run build"]
    }
  ],
  "emulators": {
    "functions": { "port": 5006 },
    "hosting": { "host": "127.0.0.1", "port": 5014 },
    "ui": { "enabled": true },
    "singleProjectMode": true
  }
}
